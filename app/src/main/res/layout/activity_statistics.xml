<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Statistics">

    <!--Shimmer-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        shimmer:duration="800">

        <!-- Adding 3 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shim_statistics" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!--Main Content-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--User image, name and address-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@drawable/leaderboard_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <!--Image, Name & Address-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_below="@id/lyBack"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/rivUser"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_username"
                        app:riv_border_color="@color/blue"
                        app:riv_border_width="3dp"
                        app:riv_oval="true" />

                    <!--Name-->
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/public_round_bold"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/pa_topic" />

                    <!--Rank, Coins & Score-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:orientation="horizontal">

                        <!--Rank-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtRank"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:fontFamily="@font/public_round_bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_medium"
                                android:gravity="center"
                                android:text="@string/rank"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/colorPrimaryDark" />

                        <!--Coins-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/txtCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:fontFamily="@font/public_round_bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_medium"
                                android:gravity="center"
                                android:text="@string/coins"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.4dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/colorPrimaryDark"
                            android:visibility="gone" />

                        <!--Score-->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtScore"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:fontFamily="@font/public_round_bold"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/public_medium"
                                android:gravity="center"
                                android:text="@string/score"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_16"
                                android:theme="@style/AppTheme.MyRipple" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--Back-->
                <LinearLayout
                    android:id="@+id/lyBack"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/answer_it_gradient_bg"
                    android:gravity="center"
                    android:theme="@style/AppTheme.MyRipple">

                    <TextView
                        android:layout_width="17dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_back"
                        android:gravity="center" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Template View for native ad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <com.facebook.ads.NativeAdLayout
                    android:id="@+id/fbNativeTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone" />

                <!--  This is your template view -->
                <com.google.android.ads.nativetemplates.TemplateView
                    android:id="@+id/nativeTemplate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:gnt_template_type="@layout/gnt_small_template_view" />

            </LinearLayout>

            <!--Statistics-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <!--Attended Questions-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtTotalQue"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:fontFamily="@font/public_round_bold"
                            android:gravity="center"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/text_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_medium"
                            android:gravity="center"
                            android:text="@string/attended_questions"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/default_text_15" />

                    </LinearLayout>

                </LinearLayout>

                <!--Correct Answers-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="@color/green" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtCorrectAns"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:fontFamily="@font/public_round_bold"
                            android:gravity="center"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/text_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_medium"
                            android:gravity="center"
                            android:text="@string/correct_answers"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/default_text_15" />

                    </LinearLayout>

                </LinearLayout>

                <!--InCorrect Answers-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="@color/Red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtIncorrectAns"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:fontFamily="@font/public_round_bold"
                            android:gravity="center"
                            android:textColor="@color/text_blue"
                            android:textSize="@dimen/text_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/public_medium"
                            android:gravity="center"
                            android:text="@string/incorrect_answers"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/default_text_15" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>