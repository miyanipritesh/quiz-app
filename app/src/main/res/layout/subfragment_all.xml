<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--Shimmer-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        shimmer:duration="800">

        <!-- Adding 3 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shim_user_leaderboard" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Main Content-->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lyUserPos"
            android:layout_marginBottom="2dp"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Top 3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@drawable/leaderboard_bg"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <!--Top 3 Contestant-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <!--2nd-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom|center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/rivSecond"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_username"
                                        app:riv_border_color="@color/blue"
                                        app:riv_border_width="2dp"
                                        app:riv_oval="true" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="85dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/rectangle_bg"
                                    android:backgroundTint="@color/white"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_2nd"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/public_round_bold"
                                        android:gravity="center"
                                        android:text="2"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/txtPointsSecond"
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center"
                                        android:textColor="@color/text_pink"
                                        android:textSize="16dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!--1st-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom|center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <com.makeramen.roundedimageview.RoundedImageView
                                            android:id="@+id/rivFirst"
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:layout_below="@id/crown"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="fitXY"
                                            android:src="@drawable/ic_username"
                                            app:riv_border_color="@color/blue"
                                            app:riv_border_width="2dp"
                                            app:riv_oval="true" />

                                        <TextView
                                            android:id="@+id/crown"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="-8dp"
                                            android:background="@drawable/ic_crown2"
                                            android:visibility="visible" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="120dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/rectangle_bg"
                                    android:backgroundTint="@color/white"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_1st"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:fontFamily="@font/public_round_bold"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/txtPointsFirst"
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center"
                                        android:textColor="@color/text_pink"
                                        android:textSize="16dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!--3rd-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="bottom|center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/rivThird"
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/ic_username"
                                        app:riv_border_color="@color/blue"
                                        app:riv_border_width="2dp"
                                        app:riv_oval="true" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/rectangle_bg"
                                    android:backgroundTint="@color/white"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_3rd"
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:fontFamily="@font/public_round_bold"
                                        android:gravity="center"
                                        android:text="3"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/txtPointsThird"
                                        android:layout_width="match_parent"
                                        android:layout_height="25dp"
                                        android:fontFamily="@font/public_medium"
                                        android:gravity="center"
                                        android:textColor="@color/text_pink"
                                        android:textSize="16dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@color/white"
                            android:visibility="visible" />

                        <!--Name of Top 3-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <!--2nd-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtSecondName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_medium"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <!--1st-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtFirstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_medium"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                            </LinearLayout>

                            <!--3rd-->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtThirdName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/public_medium"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="16dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Template View for native ad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <com.facebook.ads.NativeAdLayout
                        android:id="@+id/fbNativeTemplate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone" />

                    <!--  This is your template view -->
                    <com.google.android.ads.nativetemplates.TemplateView
                        android:id="@+id/nativeTemplate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:gnt_template_type="@layout/gnt_small_template_view" />

                </LinearLayout>

                <!--RecyclerView-->
                <LinearLayout
                    android:id="@+id/lyRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvAllContestant"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        app:fastScrollEnabled="false" />

                </LinearLayout>

                <!--No data-->
                <LinearLayout
                    android:id="@+id/lyNoData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/round_bg_r5_white"
                        android:backgroundTint="@color/extraLightGray"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_no_data" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!--Current User details-->
        <LinearLayout
            android:id="@+id/lyUserPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/user_gradient_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <!--Rank-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserRank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/public_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_texts" />

                </LinearLayout>

                <!--Contestant Image-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/rivUser"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="3dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_username"
                        app:riv_border_color="@color/blue"
                        app:riv_border_width="2dp"
                        app:riv_oval="true" />

                </LinearLayout>

                <!--Name-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.47"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/public_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_texts" />

                </LinearLayout>

                <!--Total points-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtUserPoints"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/public_medium"
                        android:gravity="center|end"
                        android:textColor="@color/white"
                        android:textSize="@dimen/default_texts" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>