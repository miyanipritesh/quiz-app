<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WelcomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!-- BottomNavigationView style -->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/public_medium</item>
        <item name="android:textSize">@dimen/name_home</item>
    </style>

    <!--Push Notification Switch-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:panelColorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>


    <!--Alert Dialog-->
    <style name="AlertDialogDanger" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- PopUp Enter Exit Animation -->
    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/exit</item>
    </style>

    <!-- TabLayout text -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/public_round_bold</item>
        <item name="android:textSize">@dimen/default_text_15</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- CountDown Timer text -->
    <style name="timer_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/public_round_bold</item>
    </style>

    <!-- Ripple effect -->
    <style name="AppTheme.MyRipple">
        <item name="colorControlHighlight">@color/extraLight_colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Ripple effect -->
    <style name="AppTheme.MyRipple_selected">
        <item name="colorControlHighlight">@color/extraLight_colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>